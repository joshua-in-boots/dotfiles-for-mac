alias code='/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code'
alias grep='grep --color=auto'
alias hs='history 0 | grep'
alias ls='ls -G'
alias la='ls -a'
alias ll='ls -alh'
alias Pwd='pwd -P'
alias rm='rm -i'
alias sha256='shasum -a 256'
alias vi='/usr/local/bin/nvim'

# network
alias myip='curl http://ipecho.net/plain; echo'

# ssh related
alias ssh-key-fingerprint='ssh-keygen -l -E md5 -f'

# vagrant related
alias vagrant-status='vagrant global-status --prune'

# vmware related
alias vmnet-cli='sudo /Applications/VMware\ Fusion.app/Contents/Library/vmnet-cli'
alias vmnet-restart='vmnet-cli --configure; vmnet-cli --start'

# git related
alias wdiff='git wdiff'
alias wlog='git log -p --word-diff=color'

# keybase related
alias mykeybase='cd /Volumes/Keybase'

# system commands
alias htop='sudo htop'
