alias grep='grep --color=auto'
alias hs='history 0 | grep'
alias ls='ls -G'
alias la='ls -a'
alias ll='ls -alh'
alias l.='ls -l -d .*'
alias Pwd='pwd -P'
alias rm='rm -i'
alias sha256='shasum -a 256'
[ -f "/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code" ] && alias code='/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code'
[ -f "/usr/local/bin/nvim" ] && alias vi='/usr/local/bin/nvim'

# network
alias myip='curl http://ipecho.net/plain; echo'

# ssh related
alias ssh.fingerprint='ssh-keygen -l -E md5 -f'

# VMware Fusion
if [ -f "/Applications/VMware\ Fusion.app/Contents/Library/vmrun" ]; then
	alias vmrun='/Applications/VMware\ Fusion.app/Contents/Library/vmrun'
	alias vmnet-cli='sudo /Applications/VMware\ Fusion.app/Contents/Library/vmnet-cli'
	alias vmnet-restart='vmnet-cli --configure; vmnet-cli --start'
fi

# vagrant related
alias v.status='vagrant global-status --prune'

# git related
alias wdiff='git wdiff'
alias wlog='git log -p --word-diff=color'

# keybase related
alias keybase.pub='cd /Volumes/Keybase/public/zosh'
alias keybase.pri='cd /Volumes/Keybase/private/zosh'

# system commands
alias htop='sudo htop'

# typo correction
alias eixt='exit'
alias soanr='sonar'

# Application Open
alias typora="open -a /Applications/Typora.app/Contents/MacOS/Typora"